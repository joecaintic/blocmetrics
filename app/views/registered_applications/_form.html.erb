<%= form_for [user, registered_application] do |f| %>
  <% if registered_application.errors.any? %>
    <div class= "alert alert-danger">
      <h4>There are <%= pluralize(registered_application.errors.count, "error") %>.</h4>
      <ul>
        <% registered_application.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
  <% end %>


    <div class= "form-inline">
      <%= form_group_tag(registered_application.errors[:name]) do %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

      <% end %>

      <div class="form-group">
        <%= f.submit "Register Application", class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
